#!/usr/bin/env bash
# Define the PID file location
PID_FILE="/var/run/my_process.pid"

# Function to start the process
start_process() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi

    # Start the manage_my_process script in the background
    ./manage_my_process &
    echo $! > "$PID_FILE"  # Save the PID to the PID file
    echo "manage_my_process started"
}

# Function to stop the process
stop_process() {
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        exit 1
    fi

    # Read the PID from the PID file and kill the process
    PID=$(cat "$PID_FILE")
    kill "$PID"
    rm -f "$PID_FILE"  # Remove the PID file
    echo "manage_my_process stopped"
}

# Function to restart the process
restart_process() {
    stop_process
    start_process
    # Only output the restart message
    echo "manage_my_process restarted"
}

# Main script logic
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
