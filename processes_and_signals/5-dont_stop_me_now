#!/usr/bin/env bash
# Stops the 4-to_infinity_and_beyond process using pkill.

pkill 4-to_infinity_and_beyond

if pkill 4-to_infinity_and_beyond; then # Correct way to check exit status
    echo "Process 4-to-infinity_and_beyond terminated."
else
    echo "Process 4-to-infinity_and_beyond not found or could not be terminated."
fi
